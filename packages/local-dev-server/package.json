{
  "name": "local-dev-server",
  "version": "1.0.0",
  "description": "Local dev server",
  "main": "dist/LocalDevServer.js",
  "types": "dist/LocalDevServer.d.ts",
  "author": "nkruk@salesforce.com",
  "license": "MIT",
  "bin": {
    "local-dev": "./bin/run"
  },
  "oclif": {
    "commands": "./dist/cli/commands",
    "bin": "local-dev",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "files": [
    "dist",
    "!dist/__test__",
    "bin"
  ],
  "scripts": {
    "clean": "yarn rimraf dist",
    "build": "yarn clean && tsc && ts-node build/copy-assets",
    "watch": "tsc -w | awk '{gsub(/\\033c/,\"\") system(\"\")}1'",
    "lint": "yarn eslint src --ext js,ts",
    "lint:ci": "yarn lint --output-file ./reports/eslint.log --no-color",
    "start:todo": "node ./bin/run server test-projects/lwc-todomvc-e8217b7 todo/app",
    "start:todo:debug": "node --inspect-brk ./bin/run server test-projects/lwc-todomvc-e8217b7 todo/app",
    "debug": "node --inspect-brk dist/index.js",
    "test": "yarn jest src --passWithNoTests --runInBand",
    "test:debug": "node --inspect node_modules/.bin/jest src --runInBand",
    "test:ci": "yarn jest --maxWorkers=1 --ci --config jest.config.all.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "yarn prepare && yarn lint && yarn test"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@oclif/tslint": "^3",
    "@salesforce-ux/design-system": "^2.6.1",
    "@talon/compiler": "0.0.12",
    "@talon/force-modules": "^0.0.5",
    "@talon/framework": "0.0.9",
    "@types/shelljs": "^0.8.4",
    "lwc-components-lightning": "1.1.6-alpha",
    "rimraf": "^2.6.3",
    "shelljs": "^0.8.3",
    "jest": "^24.7.1",
    "jest-runner-eslint": "^0.7.3"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-0",
    "@lwc/compiler": "^0.36.0",
    "@lwc/engine": "^0.36.0",
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "cpx": "^1.5.0",
    "express-http-proxy": "^1.5.1",
    "gulp": "^4.0.0",
    "memory-cache": "^0.2.0",
    "morgan": "^1.9.1",
    "object-hash": "^1.3.1",
    "rollup": "^0.66.6",
    "rollup-plugin-compat": "^0.21.4",
    "tslint": "^5.0.0",
    "local-dev-modules": "^1.0.0"
  }
}
