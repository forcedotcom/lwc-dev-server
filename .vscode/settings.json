{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "npm.packageManager": "yarn",
  "npm.exclude": [
    "**/lib/unpacked/**",
    "**/test-projects/**",
    "**/integration-tests/**"
  ],
  "eslint.validate": [
    "javascript",
    {
      "language": "typescript",
      "autoFix": true
    }
  ],
  "salesforcedx-vscode-lightning.activationMode": "always"
}
