{
  "name": "local-dev-server",
  "version": "1.0.0",
  "description": "Local dev server",
  "main": "index.js",
  "author": "nkruk@salesforce.com",
  "license": "MIT",
  "bin": {
    "local-dev": "./bin/run"
  },
  "oclif": {
    "commands": "./dist/cli/commands",
    "bin": "local-dev",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "files": [
    "*"
  ],
  "scripts": {
    "clean": "yarn rimraf dist",
    "build": "tsc",
    "watch": "tsc -w | awk '{gsub(/\\033c/,\"\") system(\"\")}1'",
    "lint": "yarn eslint src --ext js,ts",
    "lint:ci": "yarn lint --output-file ./reports/eslint.log --no-color",
    "start:todo": "node ./bin/run server test-projects/ebikes-lwc",
    "debug": "node --inspect-brk dist/index.js",
    "test": "yarn jest src --passWithNoTests --runInBand",
    "test:debug": "node --inspect node_modules/.bin/jest src --runInBand",
    "test:ci": "yarn jest --maxWorkers=1 --ci --config jest.config.all.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "yarn prepare && yarn lint && yarn test"
  },
  "devDependencies": {
    "@lwc/engine": "0.37.0",
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@oclif/tslint": "^3",
    "@salesforce-ux/design-system": "^2.6.1",
    "@talon/compiler": "0.0.8",
    "@talon/force-modules": "^0.0.5",
    "@talon/framework": "0.0.9",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.4",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "colors": "^1.3.2",
    "cpx": "^1.5.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jest-runner-eslint": "^0.7.3",
    "lint-staged": "^8.1.5",
    "lwc-components-lightning": "1.1.6-alpha",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "24.0.2",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "@lwc/compiler": "^0.34.7",
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "express-http-proxy": "^1.5.1",
    "gulp": "^4.0.0",
    "memory-cache": "^0.2.0",
    "morgan": "^1.9.1",
    "object-hash": "^1.3.1"
  },
  "engines": {
    "node": "10.15.3"
  }
}
