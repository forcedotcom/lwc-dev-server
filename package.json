{
  "name": "local-dev-tools",
  "version": "1.0.0",
  "description": "Local Dev Tools",
  "author": "nkruk@salesforce.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "lerna run clean --stream",
    "build": "lerna run build --stream",
    "test": "lerna run test --stream --no-bail -- --colors",
    "test:watch": "lerna run --stream --scope local-dev-server test:watch ",
    "lint": "lerna run lint --stream --parallel",
    "precommit": "lerna run precommit --stream",
    "prepush": "lerna prepush --stream",
    "start:todo": "lerna run --stream --scope local-dev-server start:todo",
    "start:todo:debug": "lerna run --stream --scope local-dev-server start:todo:debug",
    "watch": "lerna run --stream --scope local-dev-server watch",
    "link-dev": "lerna exec yarn link",
    "unlink-dev": "lerna exec yarn unlink --no-bail",
    "link-talon": "lerna exec yarn link @talon/common @talon/framework @talon/compiler --scope local-dev-server",
    "unlink-talon": "lerna exec yarn unlink @talon/common @talon/framework @talon/compiler --scope local-dev-server"
  },
  "devDependencies": {
    "colors": "^1.3.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lerna": "^3.13.2",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "typescript": "^3.4.3",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.4",
    "ts-jest": "24.0.2",
    "ts-node": "^8.0.3"
  },
  "engines": {
    "node": "10.15.3"
  },
  "workspaces": {
    "packages": ["packages/*"]
  }
}
