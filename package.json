{
  "name": "local-dev-server",
  "version": "1.0.0",
  "description": "Local dev server",
  "main": "dist/LocalDevServer.js",
  "types": "dist/LocalDevServer.d.ts",
  "author": "Lightning Tooling",
  "license": "MIT",
  "bin": {
    "local-dev": "./bin/run"
  },
  "oclif": {
    "macos": {
      "identifier": "com.salesforce.localdevserver"
    },
    "commands": "./dist/cli/commands",
    "bin": "local-dev",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-update"
    ],
    "update": {
      "s3": {
        "bucket": "bucketeer-42b78764-a91c-4b23-a7ba-4c047290ae18"
      }
    }
  },
  "files": [
    "dist",
    "!dist/__test__",
    "bin",
    "modules",
    "/oclif.manifest.json"
  ],
  "lwc": {
    "mapNamespaceFromPath": true,
    "modules": [
      "modules"
    ]
  },
  "scripts": {
    "clean": "yarn rimraf dist",
    "build": "yarn clean && tsc && ts-node build/copy-assets",
    "watch": "tsc -w | awk '{gsub(/\\033c/,\"\") system(\"\")}1'",
    "lint": "yarn eslint src --ext js,ts",
    "lint:ci": "yarn lint --output-file ./reports/eslint.log --no-color",
    "start:todo": "node ./bin/run server test-projects/lwc-todomvc-e8217b7 todo/app",
    "start:todo:debug": "node --inspect-brk ./bin/run server test-projects/lwc-todomvc-e8217b7 todo/app",
    "debug": "node --inspect-brk dist/index.js",
    "test": "yarn jest src --passWithNoTests --runInBand --coverage",
    "test:watch": "yarn jest src --passWithNoTests --runInBand --coverage --watch",
    "test:debug": "node --inspect node_modules/.bin/jest src --runInBand",
    "test:ci": "yarn jest --maxWorkers=1 --ci --config jest.config.all.js --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "yarn prepare && yarn lint && yarn test",
    "link-talon": "yarn link @talon/common @talon/framework @talon/compiler",
    "unlink-talon": "unlink @talon/common @talon/framework @talon/compiler",
    "prepack": "oclif-dev manifest",
    "postpack": "rm -f oclif.manifest.json"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@oclif/tslint": "^3",
    "@types/jest": "^24.0.11",
    "@types/shelljs": "^0.8.4",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "aws-sdk": "^2.445.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "jest-runner-eslint": "^0.7.3",
    "lint-staged": "^8.1.5",
    "mock-fs": "^4.8.0",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.0.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-0",
    "@lwc/compiler": "^0.37.2",
    "@lwc/engine": "^0.37.2",
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "@oclif/plugin-update": "^1.3.9",
    "@salesforce-ux/design-system": "^2.6.1",
    "@talon/common": "file:./lib/talon-common-0.11.2.tgz",
    "@talon/compiler": "file:./lib/talon-compiler-0.11.2-alpha.tgz",
    "@talon/force-modules": "file:./lib/talon-force-modules-0.0.5.tgz",
    "@talon/framework": "file:./lib/talon-framework-0.11.2.tgz",
    "cpx": "^1.5.0",
    "lwc-components-lightning": "file:./lib/lwc-components-lightning-1.0.19-alpha.tgz"
  },
  "resolutions": {
    "@talon/common": "file:./lib/talon-common-0.11.2.tgz",
    "@talon/framework": "file:./lib/talon-framework-0.11.2.tgz",
    "@talon/metadata-schema": "file:./lib/talon-metadata-schema-0.0.9.tgz"
  },
  "engines": {
    "node": "10.15.3"
  }
}
