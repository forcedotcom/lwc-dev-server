{
  "name": "lwc-dev-server",
  "version": "1.9.4",
  "description": "Local dev server",
  "main": "dist/LocalDevServer.js",
  "types": "dist/LocalDevServer.d.ts",
  "author": "Lightning Tooling",
  "license": "MIT",
  "repository": "forcedotcom/local-dev-tools",
  "bin": {
    "lwc-dev-server": "./bin/run"
  },
  "oclif": {
    "macos": {
      "identifier": "com.salesforce.localdevserver"
    },
    "commands": "./dist/cli/commands",
    "bin": "lwc-dev-server",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-update"
    ],
    "update": {
      "s3": {
        "bucket": "bucketeer-42b78764-a91c-4b23-a7ba-4c047290ae18"
      }
    }
  },
  "files": [
    "dist",
    "!dist/__test__",
    "bin",
    "modules",
    "/oclif.manifest.json",
    "/messages"
  ],
  "lwc": {
    "mapNamespaceFromPath": true,
    "modules": [
      "modules"
    ]
  },
  "scripts": {
    "clean": "yarn rimraf dist",
    "build": "yarn clean && tsc && ts-node build/copy-assets",
    "watch": "tsc -w | awk '{gsub(/\\033c/,\"\") system(\"\")}1'",
    "lint": "yarn eslint src --ext js,ts",
    "lint:ci": "yarn lint --output-file ./reports/eslint.log --no-color",
    "start:todo": "node ./bin/run server test-projects/lwc-todomvc-e8217b7 todo/app",
    "start:todo:debug": "node --inspect-brk ./bin/run server test-projects/lwc-todomvc-e8217b7 todo/app",
    "debug": "node --inspect-brk dist/index.js",
    "test": "yarn jest src --passWithNoTests --runInBand --coverage",
    "test:watch": "yarn jest src --passWithNoTests --runInBand --coverage --watch",
    "test:debug": "node --inspect node_modules/.bin/jest src --runInBand",
    "test:ci": "yarn jest --maxWorkers=1 --ci --config jest.config.all.js --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "lint-staged",
    "prepush": "yarn prepare && yarn lint && yarn test",
    "link-talon": "yarn link @talon/common @talon/framework @talon/compiler",
    "unlink-talon": "yarn unlink @talon/common @talon/framework @talon/compiler",
    "prepack": "oclif-dev manifest",
    "postpack": "rm -f oclif.manifest.json",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@oclif/tslint": "^3",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/shelljs": "^0.8.4",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@yarnpkg/lockfile": "^1.1.0",
    "aws-sdk": "^2.445.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "gunzip-maybe": "^1.4.1",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "jest-runner-eslint": "^0.7.3",
    "lint-staged": "^8.1.5",
    "mock-fs": "^4.8.0",
    "prettier": "^1.17.0",
    "shelljs": "^0.8.3",
    "tar-fs": "^2.0.0",
    "ts-jest": "^24.0.2",
    "ts-mockito": "^2.3.1",
    "ts-node": "^8.1.0",
    "tslint": "^5.0.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-0",
    "@lwc/compiler": "^0.37.2",
    "@lwc/engine": "^0.37.2",
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "@oclif/plugin-update": "^1.3.9",
    "@salesforce-ux/design-system": "^2.6.1",
    "@salesforce/command": "^1.5.0",
    "@salesforce/core": "^1.3.3",
    "@salesforce/ts-types": "^1.1.3",
    "@talon/common": "^0.11.2",
    "@talon/compiler": "^0.11.3-alpha",
    "@talon/force-modules": "^0.0.5",
    "@talon/framework": "^0.11.2",
    "colors": "^1.3.3",
    "compression": "^1.7.4",
    "cpx": "^1.5.0",
    "express": "^4.16.4",
    "fs-extra": "^7.0.1",
    "helmet": "^3.16.0",
    "lwc-components-lightning": "^1.2.1-alpha",
    "path": "^0.12.7",
    "rimraf": "^2.6.3",
    "uuidv4": "^4.0.0"
  },
  "engines": {
    "node": "10.15.3"
  }
}
